.collect_main{
    background-color: #f3f4f6;
}
.collect_title{
    padding: 20rpx;
    display: flex;
}
.collect_title .collect_tips{
    margin-left: 25rpx;
    border: 1rpx solid #cccc;
    padding: 15rpx;
    background-color: #fff;
}
.active{
    color: var(--themeColor);
    border-color: var(--themeColor);
}
.goods_item {
    display: flex;
    border-bottom: 1px solid #ccc;
  }
  .goods_img_wrap {
    flex: 2;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .goods_img_wrap image {
    width: 70%;
  }
  .goods_info_wrap {
    flex: 3;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
  }
  .goods_info_wrap .goods_name {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    -webkit-line-clamp: 2;
  }
  .goods_info_wrap .goods_price {
    color: var(--themeColor);
    font-size: 32rpx;
  }
  