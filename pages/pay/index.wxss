.user_info_row{
    display: flex;
    padding:  15rpx;
  }
  .user_info_row .user_title{
    flex: 5;
  }
  .user_info_row .user_phone{
    flex:2;
  }
  .cart_title{
    font-size: 36rpx;
    color:var(--themeColor);
    padding: 20rpx;
    border-top: 1rpx solid currentColor;
    border-bottom: 1rpx solid currentColor;
  }
  .cart_main .cart_img_wrap image{
    width: 100%;
  }
  .cart_main .cart_item{
    display: flex;
    padding: 10rpx;
    border-bottom: 1rpx solid #cccccc;
  }
  .cart_item>.cart_img_wrap{
    flex: 2 ;
  }
  .cart_item>.cart_info_wrap{
    flex:4;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
  }
  .cart_item>.cart_info_wrap .goods_name{
    display:-webkit-box;
    -webkit-box-orient: vertical;
    overflow: hidden;
    -webkit-line-clamp: 2;
  }
  .cart_item>.cart_info_wrap .goods_price_wrap{
    display: flex;
    justify-content: space-between;
  }
  .cart_item>.cart_info_wrap .goods_price_wrap > .cart_num_tool{
    display: flex;
    text-align: center;
  }
  .cart_num_tool .goods_num{
    height: 55rpx;
    width: 55rpx;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  .goods_price_wrap .goods_price{
      font-size: 34rpx;
      color: var(--themeColor);
  }
  .cart_foot{
    position: fixed;
    bottom: 0;
    left: 0;
    display: flex;
    border-top: 1rpx solid #ccc;
    width: 100%;
  }
  .cart_foot .totalprice_wrap{
    flex: 5;
    text-align: right;
    padding-right: 15rpx;
  }
  .cart_foot .totalprice_wrap .price{
    font-size: 30rpx;
    color: var(--themeColor);
    font-weight: 600;
  }
  .cart_foot .payorder_wrap{
    flex: 3;
    background-color: var(--themeColor);
    font-size: 34rpx;
    font-weight: 600;
    display: flex;
    justify-content: center;
    align-items: center;
    color: white;
  }